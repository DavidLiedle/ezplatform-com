{% extends "pagelayout.html.twig" %}

{% block content %}
    {% if items is not empty %}
        {% for item in items %}
            {% if not loop.first %}
                {% set delimiter = "delimiter" %}
            {% else %}
                {% set delimiter = '' %}
            {% endif %}
            {{ render_esi(controller('ez_content:viewLocation', {
                'locationId': item.contentInfo.mainLocationId,
                'viewType': 'row',
                'params': {
                    'delimiter': delimiter,
                    'position': loop.index0
                }
            })) }}
        {% endfor %}
    {% endif %}
{% endblock %}
